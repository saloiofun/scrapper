{{#each articles }}
<div class="card w-100 mb-3">
    <h4 class="card-header">
        <a href="{{link}}" target="_blank">{{title}}</a>
    </h4>
    <div class="card-body">
        <p class="card-text">{{summary}}</p>
        <a href="{{link}}" class="btn btn-primary" target="_blank">View Article</a>
        <button class="save-article btn btn-warning ml-1" data-id="{{_id}}">Save Article</button>
    </div>
</div>
{{/each}}